# FastAPI Backend Environment Configuration - DEFAULT
# This will be overridden by .env.local (development) or Railway variables (production)

# FastAPI Configuration
DEBUG=True
SECRET_KEY=fastapi-default-secret-key-change-me
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration - Default to SQLite for local development
DATABASE_URL=sqlite+aiosqlite:///./onestopradio.db

# Database Pool Settings (PostgreSQL)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Alternative: SQLite for testing (comment out PostgreSQL above and uncomment below)
# DATABASE_URL=sqlite+aiosqlite:///./onestopradio.db

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,https://one-stop-radio-frontend-production.up.railway.app

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=static/uploads

# Service Identity
SERVICE_NAME=OneStopRadio-FastAPI
SERVICE_VERSION=1.0.0
SERVER_HOST=0.0.0.0
SERVER_PORT=8000