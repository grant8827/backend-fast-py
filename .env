# FastAPI Backend Environment Configuration
# RESTful API service for user authentication, station metadata, and asset hosting

# FastAPI Configuration
DEBUG=True
SECRET_KEY=fastapi-secret-key-change-in-production-onestopradio-12345
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./onestopradio.db

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=static/uploads

# Service Identity
SERVICE_NAME=OneStopRadio-FastAPI
SERVICE_VERSION=1.0.0
SERVER_HOST=0.0.0.0
SERVER_PORT=8000