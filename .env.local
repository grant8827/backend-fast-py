# FastAPI Backend Environment Configuration - LOCAL DEVELOPMENT
# Use this for local development with SQLite database

# FastAPI Configuration
DEBUG=true
SECRET_KEY=fastapi-local-secret-key-onestopradio-development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration - Local SQLite (for development)
DATABASE_URL=sqlite+aiosqlite:///./onestopradio.db

# Database Pool Settings (not used with SQLite)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# JWT Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# CORS Configuration - Local development
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=static/uploads

# Service Identity
SERVICE_NAME=OneStopRadio-FastAPI-Local
SERVICE_VERSION=1.0.0
SERVER_HOST=0.0.0.0
SERVER_PORT=8000